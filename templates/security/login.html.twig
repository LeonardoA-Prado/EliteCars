{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<style>
        body.page-login {
            background-color: #f0f0f0; /* Nuevo color de fondo para la vista de login */
        }
    </style>
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('app') }}
{% endblock %}



{% block body %}

	<body class="page-login">
		<main>
			<div class="container-small page-login">
				<div class="flex">
					<div class="auth-page-form">
						<div class="text-center">
							<a href="/">
								<img src="{{ asset('images/ELITECARS-LOGO-0.png') }}" alt="Logo"/>
							</a>
						</div>
						<h1 class="auth-page-title">Iniciar Sesión</h1>
						{% if error %}
							{% if error.messageKey == 'Invalid credentials.' %}
								<div class="alert alert-danger" style="color: red; margin-bottom: 1rem;">
									La credenciales son incorrectas.
								</div>
							{% else %}
								<div class="alert alert-danger" style="color: red; margin-bottom: 1rem;">
									{{ error.messageKey|trans(error.messageData, 'security') }}
								</div>
							{% endif %}
						{% endif %}

						<form action="" method="post">
							<div class="form-group">
								<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus placeholder="Enter your email">
							</div>
							<div class="form-group">
								<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required placeholder="Insertar tu contraseña">
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<button type="submit" class="btn btn-primary btn-login w-full">Login</button>

							<div class="login-text-dont-have-account">
								¿No tienes una cuenta? -
								<a href="{{ path('app_usuario_new') }}">
									Click aqui para crear una</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</main>
	</body>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Confirmar Compra{% endblock %}

{% block body %}
<main>
  <div class="container">
    <h1>Confirmar Compra</h1>
    <div class="card p-medium">
      <h2>{{ coche.marca }} {{ coche.modelo }} - {{ coche.version }}</h2>
      <p><strong>Precio:</strong> {{ coche.precio }}â‚¬</p>
      <p><strong>Kilometraje:</strong> {{ coche.kilometros }} km</p>

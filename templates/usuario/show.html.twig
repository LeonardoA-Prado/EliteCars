{% extends 'base.html.twig' %}

{% block title %}ELITECARS | Usuario{% endblock %}

{% block body %}
<body class="page-signup">
  <main>
    <div class="container-small page-login">
      <div class="flex" style="gap: 5rem">
        <div class="auth-page-form">
          <h1 class="auth-page-title">Datos del Usuario</h1>
          <hr />
          <div class="form-group">
            <label><strong>Nombre</strong></label>
            <div class="form-control">{{ usuario.nombre }}</div>
          </div>
          
          <div class="form-group">
            <label><strong>Apellidos</strong></label>
            <div class="form-control">{{ usuario.apellidos }}</div>
          </div>
          
          
          <div class="form-group">
            <label><strong>Correo electrónico</strong></label>
            <div class="form-control">{{ usuario.email }}</div>
          </div>
          
          
          {% if usuario.coches|length > 0 %}
            <div class="alert alert-warning mt-3">
              Su cuenta tiene {{ usuario.coches|length }} coche(s) vinculado(s).
            </div>
          {% endif %}
          
          <hr />
          
          <div class="flex justify-end gap-1">
            {% if is_granted('ROLE_ADMIN') %}
              <a href="{{ path('app_usuario_index') }}" class="btn btn-default">Volver</a>
            {% else %}
              <a href="{{ path('app_coche_index') }}" class="btn btn-default">Volver</a>
            {% endif %}
            <a href="{{ path('app_usuario_edit', {'id': usuario.id}) }}" class="btn" style="background-color:rgb(226, 192, 38); color: #000;" >Editar</a>
          </div>
          
          {# Formulario para borrar la cuenta con la casilla de confirmación #}
          <form action="{{ path('app_usuario_delete', {'id': usuario.id}) }}" method="post" style="margin-top: 1rem;">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ usuario.id) }}">
            <div class="form-group">
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="confirm_deletion" value="1" required>
                  Confirmo borrar mi cuenta{% if usuario.coches|length > 0 %} y todos mis coches vinculados{% endif %}.
                </label>
              </div>
            </div>
            <button type="submit" class="btn" style="background-color:rgb(226, 38, 38); color: #fff;">Borrar cuenta</button>
          </form>
          
        </div>
        <div class="auth-page-image">
          <img src="{{ asset('images/carlogo.png') }}" alt="Car Image" class="img-responsive" />
        </div>
      </div>
    </div>
  </main>
</body>
{% endblock %}
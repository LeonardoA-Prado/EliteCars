{% extends 'base.html.twig' %}

{% block title %}Nuevo Usuario{% endblock %}

{% block body %}
{% if app.user and ('ROLE_ADMIN' in app.user.roles) %}
<div class="container my-5">
    <div class="card p-4 shadow-sm">
        <h1 class="text-center text-primary mb-4">Crear Nuevo Usuario</h1>
        {{ include('usuario/_form.html.twig', { 'button_label': 'Crear Usuario' }) }}
        <div class="mt-3 text-center">
            <a class="btn btn-secondary" href="{{ path('app_coche_index') }}">Volver</a>
        </div>
    </div>
</div>
{% else %}
    <div class="mb-3">
        <h3>NO TIENES PERMISOS O NO TE HAS LOGUEADO!! <a href="{{ path('app_login') }}">Volver a loguearte</a></h3>
    </div>
{% endif %}
{% endblock %}
